# ==========================================
# Backend API - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# Server Configuration
# ==========================================
# PORT: Server listening port (default 8001)
PORT=8001

# HOST: Server listening interface
# Development: localhost (only local connections)
# Production:  0.0.0.0   (all interfaces - use with reverse proxy like Nginx)
HOST=localhost

# ==========================================
# Environment Mode
# ==========================================
# development: Verbose logging, watch mode enabled
# production:  Minimal logging, optimized performance
# NODE_ENV=development
NODE_ENV=production

# ==========================================
# API Configuration
# ==========================================
# API_KEY: Authentication key for API requests
# ⚠️  CHANGE THIS IN PRODUCTION! Generate a secure random key
API_KEY=universal-api-key-2025

# TRIGGERS_ADMIN_KEY: Special key for admin trigger operations
# ⚠️  CHANGE THIS IN PRODUCTION! Use different key than API_KEY
TRIGGERS_ADMIN_KEY=universal-api-key-2025

# ==========================================
# Admin User (Default Account)
# ==========================================
# Default admin username (cannot be changed after first run)
ADMIN_USERNAME=admin

# Default admin password
# ⚠️  CHANGE THIS ON FIRST RUN! Use a strong password in production
ADMIN_PASSWORD=CHANGE_ME_NOW!

# ==========================================
# WhatsApp Integration
# ==========================================
WA_TIMEOUT=30000

# ==========================================
# Ngrok Development (Optional)
# ==========================================
# Set to true to enable secure cookies for ngrok tunnels
# This allows cross-site cookies for development with ngrok
ALLOW_NGROK_COOKIES=true

# ==========================================
# DEPRECATED SETTINGS (Do not use)
# ==========================================
# These settings are replaced by the data source system
# FRONTEND_URL=http://localhost:3000
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=
# DB_NAME=universal_data_db
