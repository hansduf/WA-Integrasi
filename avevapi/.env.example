# ==========================================
# Backend API - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# Server Configuration
# ==========================================
PORT=8001
HOST=localhost

# ==========================================
# API Configuration
# ==========================================
API_KEY=universal-api-key-2025
TRIGGERS_ADMIN_KEY=universal-api-key-2025

# ==========================================
# Admin User (Default Account)
# ==========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_NOW!

# ==========================================
# WhatsApp Integration
# ==========================================
WA_TIMEOUT=30000

# ==========================================
# Ngrok Development (Optional)
# ==========================================
# Set to true to enable secure cookies for ngrok tunnels
# This allows cross-site cookies for development with ngrok
ALLOW_NGROK_COOKIES=true

# ==========================================
# DEPRECATED SETTINGS (Do not use)
# ==========================================
# These settings are replaced by the data source system
# FRONTEND_URL=http://localhost:3000
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=
# DB_NAME=universal_data_db
